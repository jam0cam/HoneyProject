<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:name="com.honey.common.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.payee.AddPayeeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.honey.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".activity.payee.PayeeListActivity"
            android:label="@string/title_activity_view_payee_list" >
        </activity>
        <activity
            android:name=".activity.payee.PayeeDetailActivity"
            android:label="@string/title_activity_payee_detail" >
        </activity>
        <activity
            android:name=".activity.history.HistoryActivity"
            android:label="@string/title_activity_history" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />
</manifest>
