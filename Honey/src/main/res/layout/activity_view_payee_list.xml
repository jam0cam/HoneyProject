<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/LoginFormContainer"
              android:id="@+id/payee_main_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal">

    <fragment android:name="com.honey.Fragment.PayeeListFragment"
              android:id="@+id/frgPayeeList"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

    <fragment android:name="com.honey.Fragment.PayeeDetailFragment"
              android:id="@+id/frgPayeeDetail"
              android:layout_weight="2"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

</LinearLayout>
