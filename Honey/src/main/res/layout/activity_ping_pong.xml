<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:paddingLeft="100dp"
              android:paddingRight="100dp"
              tools:context=".PingPongActivity">

    <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Jia" />
        <EditText
                android:id="@+id/txtJiaScore"
                android:layout_width="5sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:gravity="center_horizontal"
                android:inputType="number"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="VS" />

        <EditText
                android:id="@+id/txtMattScore"
                android:layout_width="5sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:inputType="number"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Matt" />
    </LinearLayout>


    <Button
            android:id="@+id/btnSave"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:text="Save"
            android:layout_height="wrap_content"
            />

    <fragment
            android:id="@+id/frgPPSeries"
            android:layout_width="fill_parent"
            android:name="com.honey.activity.pingpong.SeriesFragment"
            android:layout_height="wrap_content"
            />

    <fragment
            android:id="@+id/frgPPGames"
            android:layout_width="fill_parent"
            android:name="com.honey.activity.pingpong.GamesFragment"
            android:layout_height="wrap_content"
            />
</LinearLayout>
